{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}

<div class="container">

    <div class="row">
        <div class="col-md-3">&nbsp;</div>
        <div class="col-md-6">
            <div class="bg-light py-3 px-3">
                <h1>Connexion au site</h1>

                {% if hasError %}
                <div class="alert alert-danger">
                    Une erreur est survenue !<br/>
                    L'email et/ou le mot de passe est invalide.
                </div>
                {% endif %}


                <form action="{{ path('account_login') }}" method="POST">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="text" name="_username" class="form-control" value="{{username}}" placeholder="Adresse mail..." required>
                    </div>
                    <div class="form-group">
                        <label for="email">Mot de passe</label>
                        <input type="password" name="_password" class="form-control" placeholder="Mot de passe..." required>
                    </div>
                    <div class="form-group">
                    <button class="btn btn-success" type="submit">Se connecter</button>
                    </div>
                </form>
            </div>
    
        </div>
    </div>

    
</div>

{% endblock %}
