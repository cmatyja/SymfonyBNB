{% extends 'base.html.twig' %}
{% block title %}Ajout d'une annonce
{% endblock %}
{% form_theme form 'ad/_collection.html.twig' %}
{% block body %}
    <div class="container">
        <h1 class="my-5">Ajouter une annonce</h1>
        {{form_start(form)}}
        <div class="row">
            <div class="col">
                <div class="alert alert-light">
                    <h2>Informations générales</h2>
                    <hr/>
                    {{form_row(form.title)}}
                    {{form_row(form.slug)}}
                    {{form_row(form.price)}}
                    {{form_row(form.rooms)}}
                </div>
                <div class="alert alert-light">
                    <h2>Détails</h2>
                    <hr/>
                    {{form_row(form.introduction)}}
                    {{form_row(form.content)}}
                </div>
            </div>
            <div class="col">
                <div class="alert alert-light">
                    <h2>Images de l'annonce</h2>
                    <hr/>
                    {{form_row(form.coverImage)}}
                    {{form_row(form.images)}}
                </div>
            </div>
        </div>
        <div class="alert alert-success clearfix">
            <h2 class="alert-heading">Sauvegarder mon annonce</h2>
            <p>Une fois tous les champs complétés, cliquez ci-dessous pour créer votre annonce</p>
            <button class="btn btn-primary float-right" type="submit">
                <i class="fas fa-check"></i>
                Créer l'annonce
            </button>
        </div>
        <input id="widgets-counter" type="hidden" value="0">
            {{form_end(form)}}
        </div>
    {% endblock %}
    {% block javascripts %}
        <script src="{{asset('build/js/ad.js')}}"></script>
    {% endblock %}